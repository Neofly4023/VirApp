<UserControl x:Class="VirApp.WorkSpace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:VirApp"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500">
    <Control.Resources>
        <ResourceDictionary>
            <Style x:Key="LargeTileStyle"
                   TargetType="Controls:Tile">
                <Setter Property="Width"
                        Value="300" />
                <Setter Property="Height"
                        Value="125" />
                <Setter Property="TitleFontSize"
                        Value="12" />
            </Style>
            <Style x:Key="SmallTileStyle"
                   TargetType="Controls:Tile">
                <Setter Property="Width"
                        Value="147" />
                <Setter Property="Height"
                        Value="125" />
                <Setter Property="TitleFontSize"
                        Value="10" />
            </Style>
        </ResourceDictionary>
    </Control.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="555*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>


        <Grid.Background>
            <ImageBrush ImageSource="img_fond/pexels-photo (3).jpg"/>
        </Grid.Background>



        <Grid x:Name="Menu_Grid" Background="#FF161A21"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="59*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1"/>

            <Grid x:Name="Logo" Grid.Column="0">
                <TextBlock x:Name="textBloc" Foreground="#41b1e1" HorizontalAlignment="Left" FontFamily="Matura MT Script Capitals" Height="{Binding ActualHeight, ElementName=LOGO, Mode=OneWay}" Margin="29,10,0,4"  TextWrapping="Wrap" Text="Vir" VerticalAlignment="Center" FontSize="30" Width="{Binding ActualWidth, ElementName=LOGO, Mode=OneWay}"/>
                <TextBlock x:Name="textBoc" HorizontalAlignment="left" Height="{Binding ActualHeight, ElementName=textBoc, Mode=OneWay}" FontFamily="Matura MT Script Capitals" Margin="75,26,0,0" TextWrapping="Wrap" FontSize="18" Foreground="#a2a3a3" Text="App" VerticalAlignment="Center" Width="75"/>

            </Grid>

            <Grid x:Name="Deconnection" Grid.Column="1" Grid.ColumnSpan="2">



            </Grid>

            <Grid x:Name="ESI" Grid.Column="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="48*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Image x:Name="Logout_ico" Source="Image/LoginDoor1.png" Stretch="Fill"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Button x:Name="button" FontFamily="Segoe UI" VerticalAlignment="Center" Foreground="white" Content="| Deconnexion" HorizontalAlignment="Left" Height="30" Margin="0,10"  Width="122" BorderThickness="0" Click="Deconnexion">
                        <Button.Background>
                            <SolidColorBrush Color="#FFF7F7F7" Opacity="0.01"/>
                        </Button.Background>
                    </Button>
                </Grid>



            </Grid>

        </Grid>



        <Grid x:Name="Work" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="327*"/>
                <ColumnDefinition Width="878*"/>
                <ColumnDefinition Width="295*"/>

            </Grid.ColumnDefinitions>

            <Grid x:Name="liste" Grid.Column="2"  Opacity="0.9" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="213*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="328*"/>
                </Grid.RowDefinitions>

                <Grid Height="209" VerticalAlignment="Bottom" Margin="0,0,0,4" >
                    <ListBox x:Name="resultat" Visibility="Collapsed" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Left" Height="171" Margin="0,38,0,0" VerticalAlignment="Top" Width="295" SelectionChanged="resultat_SelectionChanged"  />
                    <TextBox x:Name="Search" BorderBrush="#FF26303C" BorderThickness="1.5" HorizontalAlignment="Left" Margin="0,-2,0,171" TextWrapping="Wrap" Text="" Width="215" TextChanged="Search_TextChanged" LostFocus="Search_LostFocus"/>
                    <Image x:Name="User_Search_01_WF_png" Margin="215,-2,0,0" Source="Image/UserSearch1.png" Stretch="Fill" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70"/>
                </Grid>

                <Grid x:Name="message" Grid.Row="1" Background="#FF26303C" >
                    <TextBlock x:Name="Titre0" HorizontalAlignment="Left"  Height="38" TextWrapping="Wrap" Foreground="white" TextAlignment="Center" FontSize="15" VerticalAlignment="Center" Width="226" Margin="21,2,0,0"><Run Text="D"/><Run Text="emandes en cours:"/></TextBlock>
                </Grid>
                <Grid Grid.Row="2" >
                    <DataGrid x:Name="dataGrid"  ColumnWidth="*" Visibility="Visible" AutoGenerateColumns="False" IsReadOnly="True"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="275" Width="285"
                   CanUserAddRows="False"  >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Nom" Visibility="Visible"  Width="1*" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Nom}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Prenom"  Width="1*" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Prenom}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Prime"  Width="0.8*" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Prime}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="list"  Content="Traiter la liste" Background="#FF26303C" Foreground="#41b1e1" HorizontalAlignment="Left" Margin="45,280,0,10"   Width="154" Click="list_Click" />




                </Grid>

            </Grid>

            <Grid x:Name="Choix" Grid.Column="0" Background="#FF1E1F1E">

                <Grid.RowDefinitions>
                    <RowDefinition Height="124*"/>
                    <RowDefinition Height="41*"/>
                    <RowDefinition Height="535*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="Utilisateur" Grid.Row="0" Background="#FF161A21">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="23*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1" Grid.Row="1">

                            <Canvas Grid.Row="0"   Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Image Image.Source="img_fond/User-Profile2.png" Height="76" Width="76"></Image>
                            </Canvas>


                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid Grid.Column="1">
                            <Menu x:Name="Utilisateur_Grid" Background="#FF161A21" HorizontalAlignment="Center" Height="30" VerticalAlignment="Top"  Width="{Binding ActualWidth, ElementName=grid1, Mode=OneWay}">
                                <MenuItem x:Name="Nom_User" Header="Nom d'utilisateur " HorizontalAlignment="Left"  Background="#FF161A21" Foreground="white" Width="146" Initialized="Nom_User_Initialized"  >
                                    <MenuItem Header="Mon compte" Background="#FF161A21" Foreground="white" Click="Mon_Compte" />
                                    <MenuItem x:Name="D" Header="Créer un compte simple utilisateur" Background="#FF161A21" Foreground="white" Click="Creer_Simple_Utilisateur" Initialized="MenuItem_Initialized"  />
                                    <MenuItem x:Name="E" Header="Supprimer un compte simple utilisateur" Background="#FF161A21" Foreground="white" Click="Supprimer_Simple_Utilisateur" Initialized="E_Initialized" />
                                    <MenuItem x:Name="F" Header="Modifier un compte simple utilisateur" Background="#FF161A21" Foreground="white" Click="Modifier_Simple_Utilisateur" Initialized="F_Initialized"  />
                                </MenuItem>
                            </Menu>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid x:Name="MENU" Grid.Row="1">
                    <TextBlock  Grid.Row="0" Foreground="White" FontSize="25" TextAlignment="Center" Text="Menu" >
                        <TextBlock.Background>
                            <SolidColorBrush Color="#FF0F7697" Opacity="0.5"/>
                        </TextBlock.Background>
                    </TextBlock>
                </Grid>
                <Grid x:Name="Fonctionalité" Grid.Row="2">

                    <Grid Grid.Column="1">
                        <DockPanel Grid.Row="1" Background="#FF26303C" >

                            <ListBox DockPanel.Dock="Top" Background="#FF161A21" SelectionChanged="ListBox_SelectionChanged" >
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                         <Image Image.Source="Image/House-05.ico" Height="40" Width="40"></Image>
                                         <Run Text="Accueil"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                         <Image Image.Source="Image/LiveJournal.png" Height="40" Width="40"></Image>
                                         <Run Text="Demande de prime"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White" FontSize="18">
                                        <Image Image.Source="Image/Chart-Customization.png" Height="40" Width="40"></Image>
                                        <Run Text="Traitement des demandes"/>

                                        </TextBlock>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Cheque-02.png" Height="40" Width="40"></Image>
                                         <Run Text="Virement des primes"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Chart - 041.png" Height="40" Width="40"></Image>
                                         <Run Text="Statistiques"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem>
                                    <StackPanel>
                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Cheque-02-WF2.png" Height="40" Width="40"></Image>
                                         <Run Text="Primes périodiques"/>
                                        </TextBlock>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Chart - 041.png" Height="40" Width="40"></Image>
                                         <Run Text="Importer un fichier excel"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="A" Initialized="A_Initialized">
                                    <StackPanel >
                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Data-Edit2.png" Height="40" Width="40"></Image>
                                         <Run Text="Modifier les données"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="B" Initialized="B_Initialized">
                                    <StackPanel>

                                        <TextBlock Foreground="White"  FontSize="18">
                                        <Image Image.Source="Image/Data-Add.png" Height="40" Width="40"></Image>
                                        <Run Text="Ajouter des données"/>
                                        </TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                            </ListBox>
                        </DockPanel>
                    </Grid>

                </Grid>
            </Grid>

            <Grid x:Name="accueil" Grid.Column="1" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="495*"/>
                    <RowDefinition Height="53*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="43*"/>
                    <ColumnDefinition Width="790*"/>
                    <ColumnDefinition Width="45*"/>
                </Grid.ColumnDefinitions>


                <Grid  Grid.Column="1" Grid.Row="1" Background="#FF161A21" Opacity="0.95" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="76*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock x:Name="textBlock"  FontSize="25"  Foreground="#41b1e1" TextAlignment="Center" HorizontalAlignment="Center" Height="45" Margin="184,34,194,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412" TextDecorations="{x:Null}" ><Run Text="Bienvenue sur VirApp "/></TextBlock>

                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8*"/>
                            <RowDefinition Height="11*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="197*"/>
                                <ColumnDefinition Width="198*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Controls:Tile Title="Manuel d'utilisation"
                              Style="{StaticResource LargeTileStyle}"
                               Margin="94,10,0,25" Click="Tile_Click_1" >
                                    <Canvas Grid.Row="0"  Width="76" Height="76" >
                                        <Image Source="Image/Book-04.png" HorizontalAlignment="Center" Stretch="Fill" Height="130" VerticalAlignment="Top" Width="138" Canvas.Left="-30" Canvas.Top="-24"/>
                                    </Canvas>
                                </Controls:Tile>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Controls:Tile Title="Aide"
                              Style="{StaticResource LargeTileStyle}"
                               Margin="0,10,96,25" Click="Tile_Click" >
                                    <Canvas Grid.Row="0"  Width="76" Height="76" >
                                        <Image Source="Image/Help-Shield.png" HorizontalAlignment="Center" Stretch="Fill" Height="130" VerticalAlignment="Top" Width="138" Canvas.Left="-30" Canvas.Top="-24"/>
                                    </Canvas>
                                </Controls:Tile>
                            </Grid>

                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Controls:Tile Title="A propos" HorizontalAlignment="Center"
                              Style="{StaticResource LargeTileStyle}"
                                Click="A_Propo_Click" >
                                    <Canvas Grid.Row="0"  Width="76" Height="76" >
                                        <Image Source="Image/User-Group.png" HorizontalAlignment="Center" Stretch="Fill" Height="130" VerticalAlignment="Top" Width="138" Canvas.Left="-30" Canvas.Top="-24"/>
                                    </Canvas>
                                </Controls:Tile>
                            </Grid>

                        </Grid>


                    </Grid>


                </Grid>


            </Grid>



            <Grid x:Name="Demande" Grid.Column="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="120*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="91*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="img_fond/pexels-photo (3).jpg"/>
                </Grid.Background>
                <Grid Grid.Column="1" Grid.Row="1" Background="White" Opacity="0.95">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="1000*"/>

                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1" Background="#FF161A21">
                        <TextBlock x:Name="Tit3" HorizontalAlignment="Center"  Height="31" Margin="114,6,0,10" TextWrapping="Wrap" Foreground="white" TextAlignment="Center" FontSize="20" Text="Ajout des demandes et impression des formulaires :" VerticalAlignment="Center" Width="535"/>

                    </Grid>
                    <Grid Grid.Row="2">
                        <TabControl x:Name="TabControl_Demande" Controls:TabControlHelper.IsUnderlined="True" Margin="10,10,-10,-10">
                            <TabItem Header="Ajout demande" >
                                <Grid>

                                    <Label x:Name="Type_de_demande" Content="Type de prime" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,52,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <ComboBox  x:Name="Type_prime_demande" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="259" Cursor="Arrow"  Margin="282,52,0,0" Initialized="Type_demandes_Initialized" DropDownClosed="Type_prime_demande_DropDownClosed" Height="34"/>
                                    <Label x:Name="Date_event" Content="Date evenement" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,106,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <syncfusion:DateTimeEdit x:Name="date_evenment" HorizontalAlignment="Left" Margin="282,106,0,0" TextWrapping="Wrap" Text="DateTimeEdit" VerticalAlignment="Top" Width="259" Height="32"/>
                                    <Label x:Name="num_demande" Content="Demande N°" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,161,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <syncfusion:MaskedTextBox x:Name="Num_demande" FontSize="16" HorizontalAlignment="Left" Margin="282,161,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="259" Height="34"  Initialized="Num_demande_Initialized" />
                                    <Label x:Name="nom_fonct_demande" Content="Fonctionnaire" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,215,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <Label x:Name="npfonc" Content="" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="36" Margin="282,213,0,0" VerticalAlignment="Top" Width="259" BorderBrush="#41b1e1"/>
                                    <TextBox x:Name="Nom_fonct_demande" Visibility="Hidden" HorizontalAlignment="Left" Height="36" Margin="282,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="Nom_fonct_demande_TextChanged"/>
                                    <Label x:Name="prenom_fonct_demande" Visibility="Hidden" Content="Prenom" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="36" Margin="103,269,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <TextBox x:Name="Prenom_fonct_demande" Visibility="Hidden" HorizontalAlignment="Left" Height="36" Margin="282,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
                                    <Label x:Name="Date_de_demande" Content="Date demande" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="36" Margin="103,269,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <syncfusion:DateTimeEdit x:Name="date_demande" HorizontalAlignment="Left" Margin="282,269,0,0" TextWrapping="Wrap" Text="DateTimeEdit" VerticalAlignment="Top" Height="36" Width="259"/>
                                    <Button x:Name="Ajout_demande" Content="Ajouter" Background="White" Foreground="#41b1e1" BorderBrush="#41b1e1" HorizontalAlignment="Left" Height="40" Margin="196,331,0,0" VerticalAlignment="Top" Width="205" Click="Ajout_demande_Click"/>


                                </Grid>
                            </TabItem>

                            <TabItem Header="Formulaire" FontSize="10">
                                <Grid>
                                    <Label x:Name="Type_de_formulaire" Content="Type de prime" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="38,149,0,0" VerticalAlignment="Top" Width="175" BorderBrush="#41b1e1"/>
                                    <ComboBox  x:Name="Type_formulaire" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="241" Cursor="Arrow"  Margin="249,149,0,0" Initialized="Type_formulaire_Initialized" Height="34"/>
                                    <Label x:Name="num_demande_formulaire" Content="Demande N°" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="35" Margin="38,73,0,0" VerticalAlignment="Top" Width="175" BorderBrush="#41b1e1"/>
                                    <syncfusion:MaskedTextBox Visibility="Hidden" x:Name="Num_demande_formulaire" HorizontalAlignment="Left" Margin="278,153,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" Height="35" FontSize="18" MaxLength="5" Mask="00000" Initialized="Num_demande_formulaire_Initialized"/>
                                    <ComboBox x:Name="comboBox3" HorizontalAlignment="Left" Margin="249,73,0,0" VerticalAlignment="Top" Width="241" Height="35" DropDownOpened="comboBox3_DropDownOpened" DropDownClosed="comboBox3_DropDownClosed"/>

                                    <Button x:Name="Imprimer_formulaire" Content="Imprimer" Background="White" Foreground="#41b1e1" BorderBrush="#41b1e1" HorizontalAlignment="Left" Height="40" Margin="278,250,0,0" VerticalAlignment="Top" Width="205" Click="Imprimer_formulaire_Click"/>
                                    <Button x:Name="remplir_formulaire" Content="Remplir" Background="White" Foreground="#41b1e1" BorderBrush="#41b1e1" HorizontalAlignment="Left" Height="40" Margin="38,250,0,0" VerticalAlignment="Top" Width="205" Click="remplir_formulaire_Click" />

                                </Grid>
                            </TabItem>

                            <TabItem x:Name="Tab_Décès" Header="Décès" Visibility="Hidden">
                                <Grid>

                                    <!-- Partie décès parent -->

                                    <Label x:Name="Type_de_deces" Content="Type de décès" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,10,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <ComboBox  x:Name="Type_deces" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="170" Cursor="Arrow"  Margin="282,13,0,0" DropDownClosed="Type_deces_DropDownClosed" Initialized="Type_deces_Initialized"/>
                                    <Label x:Name="Date_event_deces" Content="Date evenement" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="34" Margin="103,106,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1" Visibility="Hidden"/>
                                    <syncfusion:DateTimeEdit x:Name="date_evenment_deces" HorizontalAlignment="Left" Margin="315,114,0,0" TextWrapping="Wrap" Text="DateTimeEdit" VerticalAlignment="Top" Visibility="Hidden"/>
                                    <Label x:Name="num_demande_deces" Content="Demande N°" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Visibility="Hidden" Height="34" Margin="103,161,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <syncfusion:MaskedTextBox x:Name="Num_demande_deces" FontSize="16" HorizontalAlignment="Left" Margin="282,161,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Visibility="Hidden" Width="170" Height="34" Text="{Binding Text,ElementName=Num_demande}" IsEnabled="False"/>
                                    <Label x:Name="nom_fonct_demande_deces" Content="Fonctionnaire" FontSize="16" BorderThickness="2" Background="white" Foreground="#41b1e1" HorizontalAlignment="Left" Visibility="Hidden" Height="34" Margin="103,215,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <TextBox x:Name="Nom_fonct_demande_deces" HorizontalAlignment="Left" Height="36" Margin="282,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Visibility="Hidden"/>
                                    <Label x:Name="prenom_fonct_demande_deces" Content="" FontSize="16" BorderThickness="2" Background="White" Foreground="#41b1e1" HorizontalAlignment="Left" Height="36" Visibility="Hidden" Margin="282,213,0,0" VerticalAlignment="Top" Width="170" BorderBrush="#41b1e1"/>
                                    <TextBox x:Name="Prenom_fonct_demande_deces" HorizontalAlignment="Left" Height="36" Margin="282,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Visibility="Hidden"/>
